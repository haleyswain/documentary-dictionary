<div class="container">
  <div class="panel panel-default">
    <h1>Featured Film</h1>
    <h2><%= @featured.title %></h2>
  </div>
  <% @movies.each do |movie| %>
    <div class="panel panel-default">
      <div class="panel-title hover">
        <h1><%= link_to movie.title, movie_path(movie), :style=>'color: #50041B;' %></h1>
        <h5>Directed By</h5>
        <h4><%= movie.director %></h4>
      </div>
    </div>
  <% end %>
</div>



